{
    "esm": {
        "version": "2.5",
        "website": "http://www.ezservermonitor.com",
        "check_updates": true,
        "auto_refresh": 0,
        "theme": "blue",
        "custom_title": ""
    },
    "cpu": {
        "enable_temperature": true
    },
    "disk": {
        "show_tmpfs": true,
        "show_filesystem": true
    },
    "ping": {
        "hosts": [
            "google.com",
            "index.hu"
        ]
    },
    "last_login": {
        "enable": true,
        "max": 5
    },
    "services": {
        "show_port": true,
        "list": [
            {
                "name": "HTTP",
                "host": "localhost",
                "port": 80,
                "protocol": "tcp"
            },
            {
                "name": "HTTPS",
                "host": "localhost",
                "port": 443,
                "protocol": "tcp"
            },
            {
                "name": "DB",
                "host": "localhost",
                "port": 3306,
                "protocol": "tcp"
            },
            {
                "name": "SSH",
                "host": "localhost",
                "port": 22,
                "protocol": "tcp"
            }
        ]
    }
}
