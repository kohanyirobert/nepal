; {{ ansible_managed }}
[rutorrent]
user = {{ www_user }}
group = {{ rtorrent_www_shared_group }}
listen = /var/run/php/php7.0-fpm-rutorrent.sock
listen.owner =  {{ www_user }}
listen.group = {{ rtorrent_www_shared_group }}
listen.mode = 0660
pm = static
pm.max_children = 2
pm.start_servers = 2
pm.min_spare_servers = 1
pm.max_spare_servers = 3